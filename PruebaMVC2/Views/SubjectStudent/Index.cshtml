@model List<PruebaMVC2.Models.TableViewModels.SubjectTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Inscripciones</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Capacidad</th>
                <th>Disponibilidad</th>
                <th>Horarios</th>
                <th></th>
            </tr>
            

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Name</td>
                    <td>@oElemento.Description</td>
                    <td>@oElemento.Capacity</td>
                    <td>@oElemento.Availability</td>
                    <td>@oElemento.TimeTable</td>
                    <td>
                        <input onclick="document.location.href = '@Url.Content("~/SubjectStudent/Inscripcion?Name=" + oElemento.Name )'" type="button" class="btn btn-default" value="Inscribirse" />
                    </td>
                </tr>
            }
        </table>
    </div>

</div>

